package leetcode;

public class InsertionSort {
    public static void insertionSort(int arr[]) {
        int n = arr.length;

        for (int i=0;i<n-1;i++) {
            int nextIndex = i+1;
            int dataToBeSwapped = arr[nextIndex];
            int pointer = i;
            while (pointer>=0 && arr[pointer]>dataToBeSwapped) {
                int temp = arr[pointer];
                arr[pointer] = dataToBeSwapped;
                arr[pointer+1] = temp;
                pointer--;
            }

        }
    }

    public static void main(String[] args) {
        int arr[] = new int[]{4,3,2,1};
        insertionSort(arr);
        for (int i:arr) {
            System.out.print(i+" ");
        }
    }
}
